<h1>Edit "<%= @organization.name %>"</h1>

<%= form_with model: @organization do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: 'true' %>
  </div>

  <div class="field">
    <%= f.label :owner_id %><br />
    <%= f.text_field :user_id %>
  </div>

  <% unless @organization.services.empty? %>
    <p>Services:</d>
    <% @organization.organization_services.each do |org_service| %>
      <div>
        <%= org_service.service.name %>
        <%= link_to 'edit service' %>
        <%= link_to 'add time slots', new_organization_service_time_slot_path(org_service.id) %>
        <%= link_to 'delete', organization_service_path(org_service.id), method: :delete, data: { confirm: "Are you sure?" } %>
      </div>
    <% end %>
  <% end %>
  <%= link_to 'add service', new_organization_service_path %>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>