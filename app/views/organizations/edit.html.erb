<h1>Edit "<%= @organization.name %>"</h1>

<%= form_with model: @organization do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: 'true' %>
  </div>

  <div class="field">
    <%= f.label :owner_id %><br />
    <%= f.text_field :user_id %>
  </div>

  <% unless @organization.services.empty? %>
    <p>Services:</d>
    <% @organization.services.each do |service| %>
      <div>
        <%= service.name %>
        <%= link_to 'edit service' %>
        <%= link_to 'edit time' %>
        <%= link_to 'delete' %>
      </div>
    <% end %>
  <% end %>
  <%= link_to 'add service' %>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>