<h1>Organizations</h1>

<%= link_to 'create organization', new_organization_path %>

<% unless @organizations.empty? %>
  <table>
    <thead>
      <tr>
        <th>id</th>
        <th>owner id</th>
        <th>name</th>
        <th>created at</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @organizations.each do |org| %>
        <tr>
          <td><%= org.id %></td>
          <td><%= org.user_id %></td>
          <td><%= org.name %></td>
          <td><%= org.created_at %></td>
          <td><%= link_to "Show", org %></td>
          <td><%= link_to "Edit", edit_organization_path(org) %></td>
          <td><%= link_to "Destroy", org, method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <tr>Currently there are no organizations</tr>
<% end %>
