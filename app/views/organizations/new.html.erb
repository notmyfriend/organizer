<h1>New organization</h1>

<%= form_with model: @organization do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: 'true' %>
  </div>

  <div class="field">
    <%= f.label :owner_id %><br />
    <%= f.text_field :user_id %>
  </div>

  <div class="actions">
    <%= f.submit "Create" %>
  </div>
<% end %>